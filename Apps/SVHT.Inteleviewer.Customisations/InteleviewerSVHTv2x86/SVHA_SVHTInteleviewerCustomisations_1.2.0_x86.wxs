<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Product Id="*" Name="SVHT Inteleviewer Customisations (32-bit)" Language="1033" Version="1.2.0" Manufacturer="SVHA" UpgradeCode="{13676af4-778b-4756-9e41-d82aa11d8682}">
